<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="../../frontend/static/templatestyle.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> <%= pageTitle %> </title>
</head>
<body>
    <h1>Here are your active games</h1>
    <ul>
        
    </ul>
        <script src="https://cdn.socket.io/4.1.2/socket.io.min.js"></script>

    <script>
const socket = io.connect("http://localhost:3000");
    socket.emit("active_games",'<%= user.username.username %>');
        let ul = document.querySelector("ul");

    socket.on("active_games_return", (data) => {
    // Clear the existing content of the ul
    ul.innerHTML = "";

    if (data === undefined) {
        console.error("Error: Data is undefined.");
    } else if (data.length === 0) {
        // If the data array is empty, add a message to the ul
        let li = document.createElement("li");
        li.textContent = "You have no games!";
        ul.appendChild(li);
    } else {
        // If there are games, loop through the data and add li elements to the ul
        data.forEach(game => {
            let li = document.createElement("li");
            let a = document.createElement("a");
            a.href = "/game/" + game.game_code; // Assuming game_code is a valid URL
            a.textContent = game.game_name; // Adjust this based on your data structure
            li.appendChild(a);
            ul.appendChild(li);
        });
    }
});

    </script>
